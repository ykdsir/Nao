<aiml version="1.0.1" encoding="UTF-8">
    <!-- std-startup.xml -->

    <!-- Category是一个自动的AIML单元 -->
    <category>

        <!-- Pattern用来匹配用户输入 -->
        <!-- 如果用户输入 "LOAD AIML TEST1" -->
        <pattern>LOAD AIML TEST1</pattern>

        <!-- Template是模式的响应 -->
        <!-- 这里学习一个aiml文件 -->
        <template>
            <learn>basic_chat.aiml</learn>
            <!-- 你可以在这里添加更多的aiml文件 -->
            <!--<learn>more_aiml.aiml</learn>-->
            <learn>bye.aiml</learn>
            <learn>instruction.aiml</learn>
            <learn>funny.aiml</learn>
            <learn>tools.aiml</learn>
            <!--<learn>tuling.aiml</learn>-->
        </template>

    </category>

</aiml>